              <li class="name">
                  <h1><a href="/">Restful-rants</a>
                  </h1>
              </li>
          </ul>
          <section class="top-bar-section">
              <li><%= link_to 'manage restaurants', '/admin' %></li>
          </section>
      </nav>

      <div class="row">
          <div class="col-lg-12">
              <%= yield %>
          </div>
      </div>


